{% extends "projetIHMgestionMairieBundle::base.html.twig" %}


{% block title %}{{"Gestion de l'état civil"|trans}}{% endblock %}
{% block body %}
<div class="container">
  <div id="header" class="hero-unit">
    <h1>{{"Gestion de l'état civil"|trans}}</h1>
    <p>{{'Déstiné aux mairie afin de gerer les personnes.'|trans}}</p>
  </div>

  <div class="row">
    <div id="menu" class="span3">
      <h3>{{'Accueil'|trans}}</h3>
      <ul class="nav nav-pills nav-stacked">
        <li><a href="{{path('gestion_mairie_homepage')}}">{{'Accueil du Site'|trans}}</a></li>
        <li><a href="{{path('gestion_mairie_personne')}}">{{'Gerer les personnes'|trans}}</a></li>
	<li><a href="{{path('gestion_mairie_mariage')}}">{{'Gérer les mariages'|trans}}</a></li>
	<li><a href="{{path('gestion_mairie_logement')}}">{{'Gérer les logements'|trans}}</a></li>
	<li><a href="{{path('gestion_mairie_habite')}}">{{'Gérer les em(dé)ménagements'|trans}}</a></li>
      </ul>
      
      
    </div>
    
    <div id="content" class="span8">


{% block fos_user_content %}


<form action="{{ path('fos_user_security_check') }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />   

    <label for="username">{{ 'Identifiant'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" /></br>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'se souvenir'|trans }}</label>

    <input type="submit" id="_submit" name="_submit" value="{{ 'connexion'|trans }}" />
</form>
{% endblock fos_user_content %}



    </div>
  </div>






{% endblock %}
