{# src/Sdz/BlogBundle/Resources/views/AjouterPersonne/ajouterMariage.html.twig #}

{% extends 'projetIHMgestionMairieBundle::base.html.twig' %}

{% block title%}{{'Ajouter un mariage'|trans}} {% endblock%}

{% block body%}

<div class="container">
  <div id="header" class="hero-unit">
    <h1>{{'Ajouter un mariage'|trans}}</h1>
    <p>{{'Déstiné aux mairie afin de gerer les mariages.'|trans}}</p>
  </div>

  <div class="row">
    <div id="menu" class="span3">
      <h3>{{'Accueil'|trans}}</h3>
      <ul class="nav nav-pills nav-stacked">
        <li><a href="{{path('gestion_mairie_homepage')}}">{{'Accueil du Site'|trans}}</a></li>
        <li><a href="{{path('gestion_mairie_ajouterPersonne')}}">{{'Ajouter une personne'|trans}}</a></li>
	<li><a href="{{path('gestion_mairie_mariage')}}">{{'Gérer les mariages'|trans}}</a></li>
      </ul>
      
      
    </div>
    
    <div id="content" class="span8">
      <h3>{{'Formulaire de mariage'|trans}}</h3>
      <div class="well">
	<form method="post" {{ form_enctype(form) }}>
	  {{ form_widget(form) }}
	  <input type="submit" value="{{'Valider'|trans}}"class="btn btn-primary" />
	</form>
      </div>
     
    </div>
  </div>

  <hr>
{% endblock %}

