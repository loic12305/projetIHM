{# src/Sdz/BlogBundle/Resources/views/AjouterPersonne/ajouterPersonne.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>LES MARIAGES</title>


    <link rel="stylesheet" href="{{ asset('bundles/projetihmgestionmairie/css/bootstrap/css/bootstrap.css') }}" type="text/css" />



    <link rel="stylesheet" href="{{ asset('bundles/projetihmgestionmairie/css/stylesheet.css') }}" type="text/css" />



  </head>

  <body>
    <div class="container">
      <div id="header" class="hero-unit">
        <h1>Liste des mariages</h1>
        <p>Déstiné aux mairie afin de gerer les personnes.</p>
      </div>

      <div class="row">
        <div id="menu" class="span4">
          <h3>Accueil</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{path('gestion_mairie_homepage')}}">Accueil du Site</a></li>
            <li><a href="{{path('gestion_mairie_ajouterMariage')}}">Ajouter un mariage</a></li>
	  </ul>
          
          
        </div>
	
	<div id="content" class="span8">
          {% block body %}
          {% for mariage in mariages %}
	  <table>
	    <tr><td>{{mariage.numSecu1 }} marié avec {{ mariage.numSecu2 }} le {{ mariage.dateMariage|date('Y-m-d') }} à {{ mariage.villeMairie }}</td><td></br>
		<form action="{{ path('gestion_mairie_modifierMariage', {'id': mariage.id}) }}" method="post">
		  <input type="submit" value="modifier" class="btn btn-default" />
   	      </form></td><td></br><form action="{{ path('gestion_mairie_supprimerMariage', {'id': mariage.id}) }}" method="POST">
		  <input type="submit" value="Supprimer" class="btn btn-danger" />
   		</form>  
		
	    </td></tr>
	  </table>
	  {% endfor %}

	  {% endblock %}
        </div>
      </div>

      <hr>

      <footer>
        <p>Univ'Nantes © 2014.</p>
      </footer>
    </div>

  </body>
</html>
