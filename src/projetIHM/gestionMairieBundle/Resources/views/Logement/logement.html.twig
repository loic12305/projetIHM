{# src/Sdz/BlogBundle/Resources/views/AjouterPersonne/logement.html.twig #}

{% extends 'projetIHMgestionMairieBundle::base.html.twig' %}

{% block title%}Gérer les logements{% endblock%}

{% block body%}
<div class="container">
  <div id="header" class="hero-unit">
    <h1>Liste des logements</h1>
    <p>Déstiné aux mairie afin de gerer les logements.</p>
  </div>

  <div class="row">
    <div id="menu" class="span3">
      <h3>Accueil</h3>
      <ul class="nav nav-pills nav-stacked">
        <li><a href="{{path('gestion_mairie_homepage')}}">Accueil du Site</a></li>
        <li><a href="{{path('gestion_mairie_ajouterLogement')}}">Ajouter un logement</a></li>

      </ul>
      
      
    </div>
    
    <div id="content" class="span8">
      
      {% for logement in logements %}
      <table>
	<tr><td style="width: 500px;">{{logement.id }} - {{logement.numRue }} {{ logement.nomRue }} {{ logement.cp }} {{logement.ville}}</td><td></br><form action="{{ path('gestion_mairie_modifierLogement', {'id': logement.id}) }}" method="post">
	      <input type="submit" value="modifier" class="btn btn-default" />
   	  </form></td><td></br><form action="{{ path('gestion_mairie_modifierLogement', {'id': logement.id}) }}" method="post">
	      <input type="submit" value="Supprimer" class="btn btn-danger" />
   	    </form>  
	    
	</td></tr>
      </table>
      {% endfor %}


    </div>
  </div>

  <hr>

  <footer>
    <p>Univ'Nantes © 2014.</p>
  </footer>
</div>
{% endblock %}
