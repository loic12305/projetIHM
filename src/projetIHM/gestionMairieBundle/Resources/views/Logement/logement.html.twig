{# src/Sdz/BlogBundle/Resources/views/AjouterPersonne/logement.html.twig #}

{% extends 'projetIHMgestionMairieBundle::base.html.twig' %}

{% block title%}{{'Gérer les logements'|trans}}{% endblock%}
{% block css %}<link rel="stylesheet" href="{{ asset('bundles/projetihmgestionmairie/css/' ~ app.session.get('theme') ) }}" type="text/css" />
{% endblock %}

{% block body%}
<div class="container">
  <div id="header" class="hero-unit">
    <h1>{{'Liste des logements'|trans}}</h1>
    <p>{{'Déstiné aux mairie afin de gerer les logements'|trans}}.</p>
  </div>

  <div class="row">
    <div id="menu" class="span3">
      <h3>{{'Accueil'|trans}}</h3>
      <ul class="nav nav-pills nav-stacked">
        <li><a href="{{path('gestion_mairie_homepage')}}">{{'Accueil du Site'|trans}}</a></li>
        <li><a href="{{path('gestion_mairie_ajouterLogement')}}">{{'Ajouter un logement'|trans}}</a></li>

      </ul>
      
      
    </div>
    
    <div id="content" class="span8">
      
      {% for logement in logements %}
      <table>
	<tr><td style="width: 500px;">{{logement.id }} - {{logement.numRue }} {{ logement.nomRue }} {{ logement.cp }} {{logement.ville}}</td><td></br><form action="{{ path('gestion_mairie_modifierLogement', {'id': logement.id}) }}" method="post">
	      <input type="submit" value="{{'modifier'|trans}}" class="btn btn-default" />
   	  </form></td><td></br><form action="{{ path('gestion_mairie_modifierLogement', {'id': logement.id}) }}" method="post">
	      <input type="submit" value="{{'Supprimer'|trans}}" class="btn btn-danger" />
   	    </form>  
	    
	</td></tr>
      </table>
      {% endfor %}


    </div>
  </div>
{% endblock %}
