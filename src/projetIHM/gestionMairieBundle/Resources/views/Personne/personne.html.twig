{# src/Sdz/BlogBundle/Resources/views/AjouterPersonne/personne.html.twig #}

{% extends 'projetIHMgestionMairieBundle::base.html.twig' %}

{% block title%}Liste des personnes{% endblock%}
{% block css %}<link rel="stylesheet" href="{{ asset('bundles/projetihmgestionmairie/css/' ~ app.session.get('theme') ) }}" type="text/css" />
{% endblock %}

{% block body%}
    <div class="container">
      <div id="header" class="hero-unit">
        <h1>{{'Liste des personnes'|trans}}</h1>
        <p>{{'Déstiné aux mairie afin de gerer les personnes.'|trans}}</p>
      </div>

      <div class="row">
        <div id="menu" class="span3">
          <h3>{{'Accueil'|trans}}</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{path('gestion_mairie_homepage')}}">{{'Accueil du Site'|trans}}</a></li>
            <li><a href="{{path('gestion_mairie_ajouterPersonne')}}">{{'Ajouter une personne'|trans}}</a></li>
	  </ul>
          
          
        </div>
      
	<div id="content" class="span8">
          
          {% for personne in personnes %}
	  <table class="table table-bordered">
	    <tr><td style="width: 500px;">{{personne.Nsecu }} - {{personne.nom }} {{ personne.prenom }} {{'né le'|trans}} {{ personne.dateNai|date('Y-m-d') }} à {{ personne.villeNai }}</td><td></br><form action="{{ path('gestion_mairie_modifierPersonne', {'id': personne.id}) }}" method="post">
		    <input type="submit" value="{{'modifier'|trans}}" class="btn btn-default" />
   		  </form></td><td></br><form action="{{ path('gestion_mairie_supprimerPersonne', {'id': personne.id}) }}" method="post">
		    <input type="submit" value="{{'Supprimer'|trans}}" class="btn btn-danger" />
   		  </form>  
		  
</td></tr>
</table>
	  {% endfor %}

	  
        </div>
      </div>


{% endblock %}
